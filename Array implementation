void push()
{
int val;
if(top==n)
ptintf("\n overflow");
else
{
	printf("enter the value?");
	scanf("%d",&val);
	top=top+1;
	stack[top]=val;
	}
	}
	void pop()
	{
	if(top==-1)
	printf("underflow");
	else
	top=top=-1;
	}
	void show()
	{
		for(i=top;i>=0;i--)
	}
	printf("%d\n",stack[i]);
}
if(top==-1)
{
	printf("stack is empty");
	}
}
